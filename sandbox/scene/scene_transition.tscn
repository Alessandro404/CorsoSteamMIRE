script/source = "extends CanvasLayer

const MAIN_MENU : PackedScene = preload(\"res://scene/main_menu.tscn\")

func change_scene(target: PackedScene = MAIN_MENU) -> void:
	$AnimationPlayer.play(\"dissolve\")
	await $AnimationPlayer.animation_finished
	get_tree().change_scene_to_packed(target)
	await get_tree().process_frame
	$AnimationPlayer.play_backwards(\"dissolve\")

func load_and_change_level(target: int, teleport: String) -> void:
	$AnimationPlayer.play(\"dissolve\")
	await $AnimationPlayer.animation_finished
	var get_scene : String = \"res://scene/livello_\" + str(target+1)+ \".tscn\"
	var scene = load(get_scene) 
	get_tree().change_scene_to_packed(scene)
	await get_tree().process_frame
	for node in Singleton.registered_teleports:
		if node.nome_teletrasporto == teleport:
			node.receive(false)
	await get_tree().process_frame
	$AnimationPlayer.play_backwards(\"dissolve\")

func fake_dissolve() -> void:
	$AnimationPlayer.play(\"dissolve\")
	Singleton.dialogue_playing = true
	await $AnimationPlayer.animation_finished
	await get_tree().create_timer(0.5).timeout
	await get_tree().process_frame
	Singleton.dialogue_playing = false
	await get_tree().process_frame
	Singleton.dialogue_playing = false
	$AnimationPlayer.play_backwards(\"dissolve\")
"

